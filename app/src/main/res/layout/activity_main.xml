<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLow"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="25dp"
            android:layout_marginTop="35dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topAppBar"
            android:backgroundTint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:elevation="8dp">

            <!-- RelativeLayout inside the Toolbar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/location"
                    />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/app_logo"
                    android:text="Hey, Ranjit Patil"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:layout_centerInParent="true" />


                <ImageView
                    android:id="@+id/speaker_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@+id/logoutButton"
                    android:src="@drawable/volume_up_24px"
                    />

                <ImageView
                    android:id="@+id/reminder_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:layout_toStartOf="@+id/speaker_button"
                    android:src="@drawable/alarm_on_24px"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/power_settings_new_24px"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
        </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/main_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" >

            </FrameLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="#ffff"
            app:fabCradleMargin="20dp"
            app:fabAlignmentMode="center"
            app:fabAnchorMode="cradle"
            app:fabCradleRoundedCornerRadius="40dp"
            app:fabCradleVerticalOffset="10dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                app:itemRippleColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:itemActiveIndicatorStyle="@style/ShapeAppearance.Material3.Corner.None"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                app:menu="@menu/bottomappbar_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/shareLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:borderWidth="5dp"
            app:backgroundTint="#FFFF"
            app:fabCustomSize="65dp"
            app:elevation="8dp"
            app:tint="@null"
            app:useCompatPadding="true"
            android:src="@drawable/red_heart"
            app:maxImageSize="45dp"
            android:contentDescription="@string/app_name"
            app:layout_anchorGravity="center_vertical"
            app:layout_anchor="@id/bottom_app_bar" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.drawerlayout.widget.DrawerLayout>
